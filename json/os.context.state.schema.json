{
  "$id": "https://heimgewebe.de/schemas/os.context.state.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OS Context State",
  "type": "object",
  "required": [
    "context_id",
    "collected_at",
    "state"
  ],
  "properties": {
    "context_id": {
      "type": "string",
      "minLength": 1
    },
    "collected_at": {
      "$ref": "#/$defs/dateTimeString"
    },
    "state": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "active",
            "idle",
            "maintenance"
          ]
        },
        "version": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "event_id": {
      "type": "string"
    },
    "event_type": {
      "type": "string"
    },
    "occurred_at": {
      "$ref": "#/$defs/dateTimeString"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true,
  "$defs": {
    "dateTimeString": {
      "type": "string",
      "pattern": "^(?:[0-9]{4})-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12][0-9]|3[01])T(?:[01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9](?:\\.[0-9]{1,9})?(?:Z|[+-](?:0[0-9]|1[0-4]):[0-5][0-9])$"
    }
  }
}
