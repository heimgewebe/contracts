{
  "$id": "https://heimgewebe.de/schemas/aussen.event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Aussen Event",
  "type": "object",
  "required": [
    "eventId",
    "eventType",
    "occurredAt",
    "payload"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "minLength": 1
    },
    "eventType": {
      "type": "string",
      "minLength": 1
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "payload": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "string"
      }
    },
    "contextId": {
      "type": "string"
    },
    "collectedAt": {
      "type": "string",
      "format": "date-time"
    },
    "state": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
