{
  "$id": "https://heimgewebe.de/schemas/aussen.event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Aussen Event",
  "type": "object",
  "required": [
    "id",
    "eventType",
    "occurredAt",
    "payload"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "eventType": {
      "type": "string",
      "minLength": 1
    },
    "occurredAt": {
      "$ref": "#/$defs/dateTimeString"
    },
    "payload": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 1
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "dateTimeString": {
      "type": "string",
      "pattern": "^(?:[0-9]{4})-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12][0-9]|3[01])T(?:[01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9](?:\\.[0-9]{1,9})?(?:Z|[+-](?:0[0-9]|1[0-4]):[0-5][0-9])$"
    }
  }
}
